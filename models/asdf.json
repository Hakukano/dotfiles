{
  "default": {
    "description": "asdf version manager",
    "check": [
      "sh",
      "-c",
      "command -v asdf"
    ]
  },
  "arch": {
    "installs": [
      {
        "description": "Install asdf",
        "check": [
          "sh",
          "-c",
          "command -v asdf"
        ],
        "commands": [
          [
            "paru",
            "-S",
            "asdf-vm"
          ],
          [
            "echo",
            "Please visit https://asdf-vm.com/guide/getting-started.html to setup asdf"
          ]
        ],
        "reverses": [
          [
            "paru",
            "-Runs",
            "asdf-vm"
          ]
        ]
      }
    ]
  },
  "macos": {
    "installs": [
      {
        "description": "Install asdf",
        "check": [
          "command",
          "-v",
          "asdf"
        ],
        "commands": [
          [
            "brew",
            "install",
            "asdf"
          ],
          [
            "echo",
            "Please visit https://asdf-vm.com/guide/getting-started.html to setup asdf"
          ]
        ],
        "reverses": [
          [
            "brew",
            "uninstall",
            "asdf"
          ]
        ]
      }
    ]
  },
  "ubuntu": {
    "installs": [
      {
        "description": "Install asdf",
        "check": [
          "sh",
          "-c",
          "[ -d \"${HOME}/.asdf\" ]"
        ],
        "commands": [
          [
            "git",
            "clone",
            "https://github.com/asdf-vm/asdf.git",
            "${HOME}/.asdf",
            "--branch",
            "v0.16.1"
          ],
          [
            "echo",
            "Please visit https://asdf-vm.com/guide/getting-started.html to setup asdf"
          ]
        ],
        "reverses": [
          [
            "rm",
            "-rf",
            "${HOME}/.asdf"
          ]
        ]
      }
    ]
  }
}
