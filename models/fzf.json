{
  "default": {
    "description": "fzf",
    "check": [
      "sh",
      "-c",
      "[ -d \"${HOME}/.fzf\" ]"
    ],
    "dependencies": [
      "ag",
      "rg"
    ]
  },
  "arch": {
    "installs": [
      {
        "description": "Install fzf",
        "check": [
          "sh",
          "-c",
          "command -v fzf"
        ],
        "commands": [
          [
            "sudo",
            "pacman",
            "-S",
            "fzf"
          ]
        ],
        "reverses": [
          [
            "sudo",
            "pacman",
            "-Runs",
            "fzf"
          ]
        ]
      }
    ]
  },
  "macos": {
    "installs": [
      {
        "description": "Install fzf",
        "check": [
          "sh",
          "-c",
          "[ -d \"${HOME}/.fzf\" ]"
        ],
        "commands": [
          [
            "git",
            "clone",
            "--depth",
            "1",
            "https://github.com/junegunn/fzf.git",
            "${HOME}/.fzf"
          ],
          [
            "${HOME}/.fzf/install"
          ]
        ],
        "reverses": [
          [
            "rm",
            "-rf",
            "${HOME}/.fzf"
          ]
        ]
      }
    ]
  },
  "ubuntu": {
    "installs": [
      {
        "description": "Install fzf",
        "check": [
          "sh",
          "-c",
          "[ -d \"${HOME}/.fzf\" ]"
        ],
        "commands": [
          [
            "git",
            "clone",
            "--depth",
            "1",
            "https://github.com/junegunn/fzf.git",
            "${HOME}/.fzf"
          ],
          [
            "${HOME}/.fzf/install"
          ]
        ],
        "reverses": [
          [
            "rm",
            "-rf",
            "${HOME}/.fzf"
          ]
        ]
      }
    ]
  }
}
