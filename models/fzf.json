{
  "default": {
    "description": "fzf",
    "check": ["sh", "-c", "command -v fzf"],
    "dependencies": ["ag", "rg"]
  },
  "arch": {
    "installs": [
      {
        "description": "Install fzf",
        "check": ["sh", "-c", "command -v fzf"],
        "commands": [
          ["sudo", "pacman", "-S", "fzf"],
          ["fzf", "--zsh", ">", "${HOME}/.fzf.zsh"]
        ],
        "reverses": [
          ["rm", "-f", "${HOME}/.fzf.zsh"],
          ["sudo", "pacman", "-Runs", "fzf"]
        ]
      }
    ]
  },
  "macos": {
    "installs": [
      {
        "description": "Install fzf",
        "check": ["sh", "-c", "[ -d \"${HOME}/.fzf\" ]"],
        "commands": [
          [
            "git",
            "clone",
            "--depth",
            "1",
            "https://github.com/junegunn/fzf.git",
            "${HOME}/.fzf"
          ],
          ["${HOME}/.fzf/install"]
        ],
        "reverses": [["rm", "-rf", "${HOME}/.fzf"]]
      }
    ]
  }
}
