{
    "default": {
        "description": "Tmux",
        "check": [
            "sh",
            "-c",
            "command -v tmux"
        ],
        "configs": [
            {
                "description": "tmux config",
                "src": "./configs/tmux/conf",
                "dst": "${HOME}/.tmux.conf"
            }
        ]
    },
    "arch": {
        "installs": [
            {
                "description": "Install tmux",
                "check": [
                    "sh",
                    "-c",
                    "command -v tmux"
                ],
                "commands": [
                    [
                        "sudo",
                        "pacman",
                        "-S",
                        "tmux"
                    ]
                ],
                "reverses": [
                    [
                        "sudo",
                        "pacman",
                        "-Runs",
                        "tmux"
                    ]
                ]
            },
            {
                "description": "Install tpm",
                "check": [
                    "sh",
                    "-c",
                    "[ -d \"${HOME}/.tpm\" ]"
                ],
                "commands": [
                    [
                        "git",
                        "clone",
                        "https://github.com/tmux-plugins/tpm",
                        "${HOME}/.tpm"
                    ]
                ],
                "reverses": [
                    [
                        "rm",
                        "-rf",
                        "${HOME}/.tpm"
                    ]
                ]
            }
        ]
    },
    "macos": {
        "installs": [
            {
                "description": "Install tmux",
                "check": [
                    "command",
                    "-v",
                    "tmux"
                ],
                "commands": [
                    [
                        "brew",
                        "install",
                        "tmux"
                    ]
                ],
                "reverses": [
                    [
                        "brew",
                        "uninstall",
                        "tmux"
                    ]
                ]
            },
            {
                "description": "Install tpm",
                "check": [
                    "sh",
                    "-c",
                    "[ -d \"${HOME}/.tpm\" ]"
                ],
                "commands": [
                    [
                        "git",
                        "clone",
                        "https://github.com/tmux-plugins/tpm",
                        "${HOME}/.tpm"
                    ]
                ],
                "reverses": [
                    [
                        "rm",
                        "-rf",
                        "${HOME}/.tpm"
                    ]
                ]
            }
        ]
    },
    "ubuntu": {
        "installs": [
            {
                "description": "Install tmux",
                "check": [
                    "sh",
                    "-c",
                    "command -v tmux"
                ],
                "commands": [
                    [
                        "sudo",
                        "apt",
                        "install",
                        "-y",
                        "tmux"
                    ]
                ],
                "reverses": [
                    [
                        "sudo",
                        "apt",
                        "remove",
                        "-y",
                        "tmux"
                    ]
                ]
            },
            {
                "description": "Install tpm",
                "check": [
                    "sh",
                    "-c",
                    "[ -d \"${HOME}/.tpm\" ]"
                ],
                "commands": [
                    [
                        "git",
                        "clone",
                        "https://github.com/tmux-plugins/tpm",
                        "${HOME}/.tpm"
                    ]
                ],
                "reverses": [
                    [
                        "rm",
                        "-rf",
                        "${HOME}/.tpm"
                    ]
                ]
            }
        ]
    }
}
