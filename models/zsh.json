{
    "default": {
        "description": "zsh",
        "check": [
            "sh",
            "-c",
            "[[ `echo -n $SHELL` =~ 'zsh' ]]"
        ],
        "configs": []
    },
    "macos": {
        "installs": [
            {
                "description": "Install zsh",
                "check": [
                    "command",
                    "-v",
                    "zsh"
                ],
                "commands": [
                    [
                        "brew",
                        "install",
                        "zsh"
                    ]
                ],
                "reverses": [
                    [
                        "brew",
                        "uninstall",
                        "zsh"
                    ]
                ]
            }
        ]
    }
}
