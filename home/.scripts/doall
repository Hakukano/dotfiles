#!/bin/bash

usage() {
  echo 'Usage: doall {update|gpl|gs}'
}

doall() {
  pwdir=`pwd`
  if [[ ${1} == 'update' ]]; then
    cd ~/Git && doall gpl
    cd ~
    if command -v apt > /dev/null; then
      sudo apt update && sudo apt dist-upgrade -y --allow-downgrades && sudo apt auto-remove -y && sudo apt auto-clean
    fi
    if command -v pacman > /dev/null; then
      sudo pacman --noconfirm -Syu
      sudo pacman --noconfirm -Sc
      sudo pacman --noconfirm -Qdtq | sudo pacman --noconfirm -Rs -
    fi
    if command -v yay > /dev/null; then
      yay -Y --gendb
      yay --noconfirm -Syu --devel
      yay --noconfirm -Sc
      yay --noconfirm -Qdtq | yay --noconfirm -Rs -
    fi
    if command -v snap > /dev/null; then
      sudo snap refresh
    fi
    if command -v brew > /dev/null; then
      brew upgrade
      brew upgrade --cask
    fi
    if command -v npm > /dev/null; then
      npm -g install npm
      npm -g update
    fi
    if command -v yarn > /dev/null; then
      yarn global upgrade
    fi
    if command -v rustup > /dev/null; then
      rustup update
    fi
    if command -v nvim > /dev/null; then
      nvim '+PlugUpdate' '+UpdateRemotePlugins' '+qa'
    fi
  elif [[ ${1} == "gpl" ]]; then
    for dir in `ls`; do
      [[ -d ${dir} ]] || continue
      echo "********** Entering ${dir} **********"
      cd ${dir} && git pull
      cd ${pwdir}
      echo "********** Leaving ${dir} **********"
      echo " "
    done
  elif [[ ${1} == "gs" ]]; then
    for dir in `ls`; do
      [[ -d ${dir} ]] || continue
      echo "********** Entering ${dir} **********"
      cd ${dir} && git status
      cd ${pwdir}
      echo "********** Leaving ${dir} **********"
      echo " "
    done
  else
    usage && exit 1
  fi
}

[[ ${#} -ne 1 ]] && usage && exit 1
doall ${1}
